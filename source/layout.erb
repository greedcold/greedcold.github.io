<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>Zuko Blog<%= ' - ' + current_article.title unless current_article.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "all", "bootstrap", "holo" %>
    <%= javascript_include_tag "all","bootstrap","jquery","quant" %>
  </head>
  <body>

      <%= yield %>

<!-- top navbar -->
  <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="navbar-header">
         <a class="navbar-brand" href="myblog/index.html.erb">Greedcold</a>
    </div>
     <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Обо мне</a></li>
     </ul>
  </div>


  <!-- sidebar   -->
  <div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar" role="navigation" >
    <div class="affix-top" data-spy="affix" data-offset-top="45" data-offset-bottom="90">
      <ul class="nav" id="sidebar-nav">
        <li><a href="#">Домой</a></li>
        <li><a href="#section1">Мой профиль на GitHub</a></li>
        <li><a href="#section2">Портфолио</a></li>
        <li><a>Архив</a>
          <ol>
            <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
              <li><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
            <% end %>
          </ol>
        </li>
      </ul>
     </div>
  </div>

  </body>
</html>
